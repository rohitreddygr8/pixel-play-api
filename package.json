{
	"name": "pixel-play-api",
	"version": "1.0.0",
	"description": "Backend for Pixel Play implemented with Node.js, Fastify, and Typescript.",
	"repository": "https://github.com/rohitreddygr8/fastify-ts-app.git",
	"author": "rohitreddygr8",
	"license": "GPL-3.0-only",
	"type": "module",
	"scripts": {
		"dev": "nodemon ./src/server.ts",
		"build": "rm -rf ./dist && tsc",
		"start": "yarn build && pm2 restart ecosystem.config.cjs --attach --no-daemon",
		"start:prod": "yarn build && pm2 restart ecosystem.config.cjs --attach --no-daemon --env production",
		"lint": "eslint ./src",
		"lint:fix": "eslint ./src --fix",
		"commit": "git cz",
		"commit:all": "git add ./ && yarn commit",
		"postinstall": "husky install",
		"test": "yarn build && node --experimental-vm-modules node_modules/jest/bin/jest.js ./dist/tests"
	},
	"config": {
		"commitizen": {
			"path": "git-cz"
		}
	},
	"dependencies": {
		"@fastify/accepts": "^4.1.0",
		"@fastify/cookie": "^8.3.0",
		"@fastify/etag": "^4.2.0",
		"@fastify/formbody": "^7.4.0",
		"@fastify/helmet": "^10.1.1",
		"@fastify/multipart": "^7.6.0",
		"@fastify/rate-limit": "^8.0.0",
		"@fastify/static": "^6.10.1",
		"@fastify/view": "^7.4.1",
		"@fastify/websocket": "^8.1.0",
		"chalk": "^5.2.0",
		"dotenv": "^16.0.3",
		"fastify": "^4.17.0",
		"handlebars": "^4.7.7",
		"http-status": "^1.6.2",
		"pino-pretty": "^10.0.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@swc/core": "^1.3.61",
		"@types/accepts": "^1.3.5",
		"@types/jest": "^29.5.1",
		"@types/node": "^20.2.1",
		"@types/passport-jwt": "^3.0.8",
		"@types/ws": "^8.5.4",
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"@typescript-eslint/parser": "^5.59.6",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"git-cz": "^4.9.0",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"nodemon": "^2.0.22",
		"pm2": "^5.3.0",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4"
	}
}
